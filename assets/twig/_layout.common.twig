<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{{ title }}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="apple-touch-icon" href="apple-touch-icon.png">
        <!-- Place favicon.ico in the root directory -->

        {# <link rel="stylesheet" href="css/normalize.css"> #}
        <link rel="stylesheet" href="dist/css/main.css">
        {# <script src="js/vendor/modernizr-2.8.3.min.js"></script> #}
    </head>
    <body class="">
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <header class="header">
            <svg class="header__logo logo">
                <use xlink:href="dist/svg/svg.svg#logo-small" />
            </svg>
            <ul class="header__menu main-menu js-main-menu">
                {% for item in menu %}
                    <li class="main-menu__item" data-section="{{ item.id }}"><a href="#{{ item.id }}">{{ item.title }}</a></li>
                {% endfor %}
            </ul>
        </header>

        {% block page %}{% endblock %}

        <script src="dist/js/jquery.min.js"></script>
        <!-- <script src="dist/js/svg4everybody.min.js"></script> -->
        <script src="dist/js/main.js"></script>
    </body>
</html>

